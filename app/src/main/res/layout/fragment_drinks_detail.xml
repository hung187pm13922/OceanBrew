<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/body"
    tools:context=".DrinksDetailFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="185dp"
                android:layout_height="178dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="62dp"
                android:layout_height="75dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/btnback" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/amaranth"
                android:text="Name of Drinks"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="280dp"
                android:fontFamily="@font/amaranth"
                android:text="Ingredients"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textVie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="250dp"
                android:fontFamily="@font/amaranth"
                android:text="Garnish"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textVi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="125dp"
                android:fontFamily="@font/amaranth"
                android:text="Method"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textV"
                android:layout_width="376dp"
                android:layout_height="81dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="28dp"
                android:fontFamily="@font/amaranth"
                android:text="Method"
                android:textColor="#5EFFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textVj"
                android:layout_width="395dp"
                android:layout_height="68dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="171dp"
                android:fontFamily="@font/amaranth"
                android:text="Method"
                android:textColor="#5EFFFFFF"
                android:textSize="20sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="290dp"
                android:isScrollContainer="true"
                android:stretchColumns="*"
                android:verticalScrollbarPosition="defaultPosition"
                app:layout_constraintVertical_bias="0.205"
                android:layout_marginLeft="15dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="88dp"
                        android:text="Name of ingredient"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:layout_width="59dp"
                        android:text="Quantification"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />
                </TableRow>


            </TableLayout>

        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>